generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

enum TypeTransaction {
  INCOME
  OUTCOME
}

model Transaction {
  id          String          @id @default(uuid())
  description String
  category    String
  type        TypeTransaction
  price       Decimal
  created_at  DateTime        @default(now())

  @@map("transactions")
}
